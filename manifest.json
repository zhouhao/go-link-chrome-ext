{
  "name": "Tiny Go Link",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A simple extension to create a tiny go link for the current page.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}